<com.alamkanak.weekview.WeekView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weekView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:eventTextColor="@android:color/white"
    app:textSize="@dimen/calendar_text_size"
    app:hourHeight="@dimen/calendar_hour_height"
    app:headerColumnPadding="@dimen/calendar_column_padding"
    app:headerColumnTextColor="#8f000000"
    app:headerRowPadding="@dimen/calendar_header_row_padding"
    app:columnGap="@dimen/calendar_column_gap"
    app:noOfVisibleDays="3"
    app:headerRowBackgroundColor="#ffefefef"
    app:dayBackgroundColor="#05000000"
    app:todayBackgroundColor="#1848adff"
    app:headerColumnBackground="#ffffffff"/>