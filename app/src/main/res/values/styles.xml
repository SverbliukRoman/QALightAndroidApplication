<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_backround</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Custom" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="DialogSpotColor">@color/colorYellow</item>
        <item name="DialogSpotCount">4</item>
    </style>


</resources>
